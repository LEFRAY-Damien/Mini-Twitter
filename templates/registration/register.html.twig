{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="h-screen flex flex-col md:flex-row">
    <div class="w-full md:w-1/2 bg-[#1DA1F2] shadow-lg p-8 flex text-white items-center justify-center px-8 lg:px-12">
    {# <div class="hidden md:flex w-full md:w-1/2 bg-[#1DA1F2] text-white flex-col justify-center px-8 lg:px-12"> #}
        <div class="max-w-lg space-y-6">
            <h1 class="text-3xl md:text-4xl font-bold leading-tight">
                Découvrez ce qui se passe dans le monde en ce moment
            </h1>
            <ul class="space-y-3 md:space-y-4 text-base md:text-lg font-medium">
                <li class="flex items-center space-x-2 md:space-x-3">
                    <span>Suivez ce qui vous intéresse</span>
                </li>
                <li class="flex items-center space-x-2 md:space-x-3">
                    <span>Ecoutez de quoi les gens nous parlent</span>
                </li>
                <li class="flex items-center space-x-2 md:space-x-3">
                    <span>Rejoingez des conversations</span>
                </li>
            </ul>
        </div>
    </div>
    {# <div class="w-full md:w-1/2 bg-[#15202B] flex items-center justify-center px-4 sm:px-6"> #}
    <div class="w-full md:w-1/2 bg-[#15202B] shadow-lg p-8 flex items-center justify-center px-4 sm:px-6">
        <div class="max-w-md w-full bg-[#192734] p-6 sm:p-8 rounded-2xl shadow-lg">
            <div class="flex justify-center mb-4 sm:mb-6">
                <svg viewBox="0 0 24 24" fill="#1DA1F2" class="w-10 h-10">
                    <g>
                        <path d="M23.954 4.569c-.885.389-1.83.654-2.825.775 
                        1.014-.611 1.794-1.574 2.163-2.723-.951.564-2.005.974-3.127 
                        1.195-.897-.959-2.178-1.559-3.594-1.559-2.717 
                        0-4.924 2.208-4.924 4.924 0 .39.045.765.127 
                        1.124-4.09-.205-7.719-2.165-10.148-5.144-.424.729-.666 
                        1.577-.666 2.476 0 1.708.87 3.216 2.188 
                        4.099-.807-.026-1.566-.248-2.229-.616v.062c0 
                        2.385 1.693 4.374 3.946 4.827-.413.111-.849.171-1.296.171-.317 
                        0-.626-.03-.928-.086.627 1.956 2.444 3.379 4.6 
                        3.421-1.68 1.318-3.809 2.105-6.115 
                        2.105-.398 0-.79-.023-1.175-.069 2.179 
                        1.397 4.768 2.212 7.557 2.212 9.054 
                        0 14-7.496 14-13.986 0-.21-.004-.423-.014-.633.961-.689 
                        1.8-1.56 2.46-2.548z"></path>
                    </g>
                </svg>
            </div>
            <h2 class="text-center text-2xl font-bold text-white mb-6">Mini Twitter</h2>

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

                <div>
                    {{ form_widget(registrationForm.username, {'attr': {
                        'placeholder': 'Email',
                        'class': 'mt-1 block w-full px-3 py-2 bg-[#15202B] text-white border border-gray-600 rounded-md focus:ring-[#1DA1F2] focus:border-[#1DA1F2] sm:text-sm'
                    }}) }}
                    {{ form_errors(registrationForm.username, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div>
                    {{ form_widget(registrationForm.email, {'attr': {
                        'placeholder': 'Username',
                        'class': 'mt-1 block w-full px-3 py-2 bg-[#15202B] text-white border border-gray-600 rounded-md focus:ring-[#1DA1F2] focus:border-[#1DA1F2] sm:text-sm'
                    }}) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {
                        'placeholder': 'Password',
                        'class': 'mt-1 block w-full px-3 py-2 bg-[#15202B] text-white border border-gray-600 rounded-md focus:ring-[#1DA1F2] focus:border-[#1DA1F2] sm:text-sm'
                    }}) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-[#1DA1F2] border-gray-600 rounded bg-[#15202B]'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-300'}}) }}
                </div>

                <div>
                    <button type="submit"
                        class="w-full py-2 px-4 bg-[#1DA1F2] hover:bg-[#1A91DA] text-white font-semibold rounded-full shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#1DA1F2] cursor-pointer">
                        Register
                    </button>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
