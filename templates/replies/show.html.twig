{% extends 'base.html.twig' %}

{% block title %}Replies{% endblock %}

{% block body %}
    <h1>Replies</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reply.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ reply.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reply.createdAt ? reply.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_replies_index') }}">back to list</a>

    <a href="{{ path('app_replies_edit', {'id': reply.id}) }}">edit</a>

    {{ include('replies/_delete_form.html.twig') }}
{% endblock %}
