{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="bg-gray-100 py-4 min-h-full">


  <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">

    <div class="h-40 bg-gradient-to-r from-blue-500 to-indigo-600 relative">
      <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2">
        <img src="{{ asset(user.avatar ? 'uploads/avatars/' ~ user.avatar : 'images/default-avatar.png') }}" 
             alt="Avatar"
             class="w-24 h-24 rounded-full border-4 border-white shadow-md object-cover">
      </div>
    </div>

    <div class="mt-16 px-8 pb-10 text-center">
      <h1 class="text-2xl font-bold text-gray-800">{{ user.username }}</h1>
      <p class="text-gray-500">{{ user.email }}</p>

  
      {% if app.user and app.user.id == user.id %}
        <div class="mt-6 flex justify-center">
          <a href="{{ path('app_profile_edit') }}"
             class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg shadow transition">
             Modifier
          </a>
        </div>
      {% endif %}

    </div>
  </div>
</div>
{% endblock %}
