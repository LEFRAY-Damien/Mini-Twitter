{% extends 'base.html.twig' %}

{% block title %}Tweet{% endblock %}

{% block body %}
    <h1>Tweet</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ tweet.user.username }}</th>
        </tr>
            <tr>
                <th>Content</th>
                <td>{{ tweet.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tweet.createdAt|date('d-m-Y H:i:s', "Europe/Paris") }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tweet_index') }}">back to list</a>

    {{ include('tweet/_delete_form.html.twig') }}
{% endblock %}
