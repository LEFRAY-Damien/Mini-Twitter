{% extends 'base.html.twig' %}

{% block title %}Page d'administration{% endblock %}

{% block body %}
<div class="w-full min-h-screen bg-[#15202B] p-6 flex flex-col items-center">
    <h1 class="text-4xl font-bold text-white mb-8">Tableau de bord d'administration</h1>


    <div class="w-full max-w-4xl mb-8 flex items-center justify-center flex-col md:flex-row gap-4 text-center mr-5">
        {% if app.user and app.user.avatar %}
            <img src="{{ asset('Uploads/avatars/' ~ app.user.avatar) }}" alt="Avatar de {{ app.user.username }}"
                 class="w-10 h-10 rounded-full object-cover border border-neutral-700 ">
        {% else %}
            <div class="w-16 h-16 rounded-full bg-neutral-600 flex items-center justify-center text-white text-lg font-bold">
                {{ app.user ? app.user.username|slice(0, 1)|upper : 'A' }}
            </div>
        {% endif %}
        <p class="text-neutral-300 text-lg">
            Bienvenue, {{ app.user ? app.user.username : 'Administrateur' }} ! Gérez les utilisateurs, tweets et signalements depuis ce panneau.
        </p>
    </div>


    <div class="w-full max-w-4xl grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
        <div class="bg-[#192734] p-4 rounded-lg shadow-lg border border-neutral-700 text-center">
            <h3 class="text-lg font-semibold text-white">Utilisateurs</h3>
            <p class="text-2xl font-bold text-[#1DA1F2]">{{ users|default(0) }}</p>
            <p class="text-neutral-400 text-sm">Total des utilisateurs inscrits</p>
        </div>
        <div class="bg-[#192734] p-4 rounded-lg shadow-lg border border-neutral-700 text-center">
            <h3 class="text-lg font-semibold text-white">Tweets</h3>
            <p class="text-2xl font-bold text-[#1DA1F2]">{{ tweets|default(0) }}</p>
            <p class="text-neutral-400 text-sm">Total des tweets publiés</p>
        </div>
        <div class="bg-[#192734] p-4 rounded-lg shadow-lg border border-neutral-700 text-center">
            <h3 class="text-lg font-semibold text-white">Signalements</h3>
            <p class="text-2xl font-bold text-[#1DA1F2]">{{ reports|default(0) }}</p>
            <p class="text-neutral-400 text-sm">Signalements en attente</p>
        </div>
    </div>


    <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <a href="{{ path('app_admin_list_user') }}"
           class="block bg-[#192734] p-6 rounded-lg shadow-lg border border-neutral-700 hover:bg-[#1c2732] transition duration-200 focus:outline-none focus:ring-2 focus:ring-[#1DA1F2]">
            <div class="flex items-center space-x-4">
               
                <div>
                    <h2 class="text-xl font-semibold text-white">Gestion des utilisateurs</h2>
                    <p class="text-neutral-400">Voir, bannir ou suspendre les utilisateurs</p>
                </div>
            </div>
        </a>


        <a href="{{ path('app_tweet_index') }}"
           class="block bg-[#192734] p-6 rounded-lg shadow-lg border border-neutral-700 hover:bg-[#1c2732] transition duration-200 focus:outline-none focus:ring-2 focus:ring-[#1DA1F2]">
            <div class="flex items-center space-x-4">
                
                <div>
                    <h2 class="text-xl font-semibold text-white">Gestion des tweets</h2>
                    <p class="text-neutral-400">Voir et gérer les tweets publiés</p>
                </div>
            </div>
        </a>

   
        <a href="{{ path('app_tweet_report') }}"
           class="block bg-[#192734] p-6 rounded-lg shadow-lg border border-neutral-700 hover:bg-[#1c2732] transition duration-200 focus:outline-none focus:ring-2 focus:ring-[#1DA1F2]">
            <div class="flex items-center space-x-4">
                <div>
                    <h2 class="text-xl font-semibold text-white">Gestion des signalements</h2>
                    <p class="text-neutral-400">Examiner et traiter les signalements</p>
                </div>
            </div>
        </a>

 
        <a href="{{ path('app_logout') }}"
           class="block bg-[#192734] p-6 rounded-lg shadow-lg border border-neutral-700 hover:bg-[#1c2732] transition duration-200 focus:outline-none focus:ring-2 focus:ring-[#1DA1F2]">
            <div class="flex items-center space-x-4">
                
                <div>
                    <h2 class="text-xl font-semibold text-white">Déconnexion</h2>
                    <p class="text-neutral-400">Se déconnecter de l'administration</p>
                </div>
            </div>
        </a>
    </div>
</div>
{% endblock %}