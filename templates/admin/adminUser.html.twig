{% extends 'base.html.twig' %}

{% block body %}

<div class="w-full min-h-screen bg-[#15202B] p-6 flex flex-col items-center">
    <h1 class="text-3xl font-extrabold text-white mb-8">Gestion des Utilisateurs</h1>

    {% if users is not empty %}
    <div class="w-full max-w-4xl space-y-4 overflow-y-auto">
        {% for user in users %}
        <div
            class="bg-[#192734] p-4 rounded-2xl flex justify-between items-center hover:bg-[#1c2732] transition shadow-md">
            <div class="flex items-center space-x-4">
                {% if user.avatar %}
                <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="Avatar de {{ user.username }}"
                    class="w-12 h-12 rounded-full border-2 border-[#1DA1F2] object-cover">
                {% else %}
                <div
                    class="w-12 h-12 rounded-full border-2 border-[#1DA1F2] flex items-center justify-center text-[#1DA1F2] font-bold">
                    {{ user.username|first|upper }}
                </div>
                {% endif %}

                <div class="flex flex-col">
                    <span class="font-bold text-lg text-white">{{ user.username }}</span>
                    <span class="text-neutral-400 text-sm">Créé le {{ user.createdAt|date('d/m/Y H:i') }}</span>
                    <span class="text-neutral-400 text-sm">Rôle: {{ user.roles|join(', ') }}</span>
                </div>
            </div>

            <div class="flex space-x-3">
                <form action="{{ path('app_admin_ban_user', {id: user.id}) }}" method="post"
                    onsubmit="return confirm('Voulez-vous vraiment bannir cet utilisateur ?');">
                    <button type="submit"
                        class="flex items-center px-4 py-2 bg-[#E0245E] hover:bg-red-700 text-white rounded-xl font-semibold transition">
                        <i class="fa-solid fa-ban mr-2"></i> Bannir
                    </button>
                </form>

                <form action="{{ path('app_admin_disable_user', {id: user.id}) }}" method="post"
                    onsubmit="return confirm('Voulez-vous vraiment restreindre cet utilisateur ?');">
                    <button type="submit"
                        class="flex items-center px-4 py-2 bg-[#1DA1F2] hover:bg-blue-600 text-white rounded-xl font-semibold transition">
                        <i class="fa-solid fa-user-slash mr-2"></i> Suspendre
                    </button>
                </form>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="text-neutral-400 mt-10 text-center text-lg">
        Aucun utilisateur trouvé...
    </div>
    {% endif %}
</div>
{% endblock %}