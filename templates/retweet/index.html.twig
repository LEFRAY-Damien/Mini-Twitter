{% extends 'base.html.twig' %}

{% block title %}Retweet index{% endblock %}

{% block body %}
    <h1>Retweet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for retweet in retweets %}
            <tr>
                <td>{{ retweet.id }}</td>
                <td>
                    <a href="{{ path('app_retweet_show', {'id': retweet.id}) }}">show</a>
                    <a href="{{ path('app_retweet_edit', {'id': retweet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_retweet_new') }}">Create new</a>
{% endblock %}
